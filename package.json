{
  "name": "@dcyfr/ai-nodejs-starter",
  "version": "1.0.0",
  "private": true,
  "description": "DCYFR AI-powered Node.js & TypeScript starter template",
  "type": "module",
  "main": "./dist/server.js",
  "types": "./dist/server.d.ts",
  "exports": {
    ".": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "serve": "tsx src/server.ts",
    "serve:prod": "node dist/server.js",
    "cli": "dcyfr-cli",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,json}\"",
    "test": "vitest run",
    "test:run": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "release": "npm run build && changeset publish",
    "version:patch": "npm version patch -m 'chore: bump version to %s'",
    "version:minor": "npm version minor -m 'chore: bump version to %s'",
    "version:major": "npm version major -m 'chore: bump version to %s'"
  },
  "keywords": [
    "dcyfr",
    "ai",
    "nodejs",
    "typescript",
    "starter",
    "template",
    "framework"
  ],
  "author": "DCYFR",
  "license": "MIT",
  "dependencies": {
    "@dcyfr/ai": "^1.0.4",
    "@dcyfr/ai-cli": "^1.0.2",
    "@types/express": "^5.0.6",
    "express": "^5.2.1"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=24.13.0",
    "npm": ">=11.6.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dcyfr/dcyfr-ai-nodejs"
  }
}
